<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="436" Width="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tb1" Margin="10" TextWrapping="Wrap" Text="TextBox" AcceptsReturn="True"/>
        <Button Content="Button" HorizontalAlignment="Center" Margin="10" VerticalAlignment="Center" Width="75" Grid.Row="1" Grid.ColumnSpan="2" Click="Button_Click"/>
        <ListBox x:Name="lb2" Grid.Column="1" Margin="10,10,0,0"/>

    </Grid>
</Window>
